<%= form_for @movie, :html => {:multipart => true} do |f| %>

<% if @movie.errors.any? %>
  <div>
    <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="main">
  <%= f.label "title" %><br>
  <%= f.text_field "title" %>
</div>
<div class="main">
  <%= f.label "release_date" %><br>
  <%= f.date_field "release_date" %>
</div>
<div class="main">
  <%= f.label "director" %><br>
  <%= f.text_field "director" %>
</div>
<div class="main">
  <%= f.label "runtime_in_minutes" %><br>
  <%= f.number_field "runtime_in_minutes" %>
</div>
<div class="main">
  <%= f.label "poster_image_url" %><br>
  <%= f.text_field "poster_image_url" %>
</div>
<div class="main">
  <%= f.file_field "image" %>
</div>
<div class="main">
  <%= f.label "description" %><br>
  <%= f.text_area "description" %>
</div>
<div class="main">
  <%= f.submit "Submit" %> 
</div>
<% end %>